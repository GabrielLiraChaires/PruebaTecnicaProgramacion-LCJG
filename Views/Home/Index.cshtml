@{
    ViewData["Title"] = "Inicio";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="row">
        <!-- Card 1: Clientes -->
        <div class="col-md-6 col-lg-4 mb-5">
            <div class="card text-center h-100 shadow"
                 style="border-radius: 30px; height: 400px; cursor: pointer; transition: all 0.3s ease;"
                 onclick="window.location.href='@Url.Action("Index", "Clientes")'"
                 onmouseover="this.style.transform='translateY(-15px)'; this.style.boxShadow='0 15px 30px rgba(13, 110, 253, 0.25)';"
                 onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 1rem 2rem rgba(0, 0, 0, 0.2)';">
                <div class="card-body d-flex flex-column justify-content-center p-4">
                    <h2 class="card-title mb-4" style="font-size: 2.5rem; font-weight: 600;">Clientes</h2>
                    <div class="my-4 d-flex justify-content-center">
                        <i class="bi bi-people-fill" style="font-size: 4rem; color: #0d6efd; transition: all 0.3s ease;"></i>
                    </div>
                    <p class="card-text mb-5" style="font-size: 1.5rem; line-height: 1.4;">Registro y modificación de clientes</p>
                    <div class="mt-auto py-3" style="background-color: #0d6efd; color: white; font-size: 1.3rem; border-radius: 0 0 30px 30px; margin: 0 -25px -25px -25px; transition: all 0.3s ease;">
                        Ir a Clientes
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 2: Productos -->
        <div class="col-md-6 col-lg-4 mb-5">
            <div class="card text-center h-100 shadow"
                 style="border-radius: 30px; height: 400px; cursor: pointer; transition: all 0.3s ease;"
                 onclick="window.location.href='@Url.Action("Index", "Productos")'"
                 onmouseover="this.style.transform='translateY(-15px)'; this.style.boxShadow='0 15px 30px rgba(25, 135, 84, 0.25)';"
                 onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 1rem 2rem rgba(0, 0, 0, 0.2)';">
                <div class="card-body d-flex flex-column justify-content-center p-4">
                    <h2 class="card-title mb-4" style="font-size: 2.5rem; font-weight: 600;">Productos</h2>
                    <div class="my-4 d-flex justify-content-center">
                        <i class="bi bi-box-seam-fill" style="font-size: 4rem; color: #198754; transition: all 0.3s ease;"></i>
                    </div>
                    <p class="card-text mb-5" style="font-size: 1.5rem; line-height: 1.4;">Registro y modificación de productos</p>
                    <div class="mt-auto py-3" style="background-color: #198754; color: white; font-size: 1.3rem; border-radius: 0 0 30px 30px; margin: 0 -25px -25px -25px; transition: all 0.3s ease;">
                        Ir a Productos
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 3: Facturas -->
        <div class="col-md-6 col-lg-4 mb-5">
            <div class="card text-center h-100 shadow"
                 style="border-radius: 30px; height: 400px; cursor: pointer; transition: all 0.3s ease;"
                 onclick="window.location.href='@Url.Action("Index", "Facturas")'"
                 onmouseover="this.style.transform='translateY(-15px)'; this.style.boxShadow='0 15px 30px rgba(255, 193, 7, 0.25)';"
                 onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 1rem 2rem rgba(0, 0, 0, 0.2)';">
                <div class="card-body d-flex flex-column justify-content-center p-4">
                    <h2 class="card-title mb-4" style="font-size: 2.5rem; font-weight: 600;">Facturas</h2>
                    <div class="my-4 d-flex justify-content-center">
                        <i class="bi bi-receipt-cutoff" style="font-size: 4rem; color: #ffc107; transition: all 0.3s ease;"></i>
                    </div>
                    <p class="card-text mb-5" style="font-size: 1.5rem; line-height: 1.4;">Crea y administra facturas.</p>
                    <div class="mt-auto py-3" style="background-color: #ffc107; color: black; font-size: 1.3rem; border-radius: 0 0 30px 30px; margin: 0 -25px -25px -25px; transition: all 0.3s ease;">
                        Ir a Facturas
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
